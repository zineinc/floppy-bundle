<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="zineinc.storage.form.file" class="ZineInc\StorageBundle\Form\Type\FileType">
            <argument type="collection">
                <argument key="swf">%zineinc.storage.form.plupload.swf%</argument>
                <argument key="xap">%zineinc.storage.form.plupload.xap%</argument>
                <argument key="file_key">%zineinc.storage.file_key%</argument>
            </argument>
            <argument type="service" id="zineinc.storage.uploader.url" />
            <argument type="service" id="zineinc.storage.checksum_checker" />

            <tag name="form.type" alias="storage_file" />
        </service>
    </services>
</container>
